<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD966">

    <TextView
        android:id="@+id/textViewAddTask"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#ff00"
        android:gravity="center"
        android:text="Thêm công việc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_margin="10dp"
        android:layout_below="@+id/textViewAddTask"
        android:id="@+id/editTextAddTask"
        android:hint="Nhập nội dung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextAddTask"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="Thêm"/>

    <Button
        android:id="@+id/buttonCancelAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextAddTask"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/buttonAddTask"
        android:text="Huỷ" />

</RelativeLayout>