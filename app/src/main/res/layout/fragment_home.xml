<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background3"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageViewAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_color="#ffffff"
            android:src="@drawable/photo"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewName"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên"
                android:textSize="24sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh hiệu: VIP"
                android:textSize="18sp"/>

            <TextView
                android:textColor="#03C50B"
                android:id="@+id/textViewScore"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Điểm: 100"
                android:textSize="18sp"/>
            
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textViewToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:text="Hôm nay"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textViewCity"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewToday"
        android:textColor="#320375"
        android:text="Hà nội"
        android:textSize="25dp"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:orientation="horizontal"
        android:weightSum="7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCity">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/imageViewWeatherIcon"
            android:layout_weight="2"
            android:src="@drawable/gallery"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:weightSum="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:layout_weight="2"
                android:id="@+id/textViewTempMaxMin"
                android:textColor="#147C02"
                android:text="Nhiệt độ"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <TextView
                android:gravity="center"
                android:layout_weight="3"
                android:id="@+id/textViewTemp"
                android:textColor="#f20"
                android:text="Nhiệt độ"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <TextView
                android:gravity="center"
                android:layout_weight="3"
                android:id="@+id/textViewStatus"
                android:layout_marginTop="5dp"
                android:text="Trạng thái"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/humidity"/>

                <TextView
                    android:id="@+id/textViewHumidity"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Độ ẩm"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/cloud"/>

                <TextView
                    android:id="@+id/textViewCloud"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Mây"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/wind"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:id="@+id/textViewWind"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Gió"
                    android:textSize="20sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_below="@id/linearLayout2"
        android:id="@+id/textViewDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật ngày "/>

    <LinearLayout
        android:weightSum="2"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textViewDay"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:padding="20dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:scaleType="fitXY"
                android:src="@drawable/playgames"
                android:id="@+id/imageButtonTinhToan"/>

            <TextView
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tạo game tính toán nhanh"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:padding="20dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:scaleType="fitXY"
                android:src="@drawable/gamecontroller"
                android:id="@+id/imageButtonTriNho"/>

            <TextView
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tạo game trí nhớ"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>